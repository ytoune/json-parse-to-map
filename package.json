{
	"name": "@ytoune/json-parse-to-map",
	"type": "module",
	"version": "1.0.0",
	"description": "",
	"author": {
		"name": "ytoune"
	},
	"engines": {
		"node": ">= 16"
	},
	"license": "MIT",
	"source": "src/index.ts",
	"main": "dist/index.cjs",
	"module": "dist/index.module.js",
	"types": "dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:ytoune/json-parse-to-map.git"
	},
	"homepage": "https://github.com/ytoune/json-parse-to-map",
	"scripts": {
		"build": "rimraf dist && microbundle",
		"dev": "microbundle watch",
		"test": "eslint '**/*.{ts,tsx}' && tsc --noEmit && jest --passWithNoTests",
		"ts-node": "node -r esbuild-register"
	},
	"dependencies": {},
	"devDependencies": {
		"@herp-inc/eslint-config": "0.18.0",
		"@swc/core": "1.2.207",
		"@swc/jest": "0.2.21",
		"@types/jest": "28.1.3",
		"@types/node": "18.0.0",
		"@typescript-eslint/eslint-plugin": "5.30.0",
		"@typescript-eslint/parser": "5.30.0",
		"esbuild": "0.14.47",
		"esbuild-register": "3.3.3",
		"eslint": "8.18.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "3.1.1",
		"eslint-plugin-import": "2.26.0",
		"jest": "28.1.1",
		"microbundle": "0.15.0",
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"typescript": "4.7.4"
	},
	"jest": {
		"extensionsToTreatAsEsm": [
			".ts",
			".tsx"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript"
						}
					}
				}
			]
		},
		"projects": [
			"<rootDir>"
		],
		"moduleNameMapper": {
			"^~/(.*)$": "<rootDir>/src/$1"
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
